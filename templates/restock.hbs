<form class="categories flexcol">
    <div class="scrollable">
        <section class="tab category"> 
            <h2 class="border">{{localize "VENDOR-RESTOCK.tab-catagory"}}</h2>
            <div class="form-group submenu">
                <label>{{localize "VENDOR-RESTOCK.sheet"}} </label><div class="form-fields"><p style="text-align:center ;"><strong>{{this.sheet}}</strong></p></div>
                <p class="notes">{{localize "VENDOR-RESTOCK.sheet-notes"}}</p>
            </div>
            <div class="form-group submenu">        
                <label>{{localize "VENDOR-RESTOCK.rolltable"}}</label>
                <select id="tableList" name="tableList" class="list">
                    {{selectOptions this.tables selected=flags.table valueAttr="key" labelAttr="label"}}
                </select>
                <p class="notes">{{localize "VENDOR-RESTOCK.rolltable-notes"}}.</p>
            </div>
            <div class="form-group submenu">
                <label>{{localize "VENDOR-RESTOCK.rollformula"}}</label><input id="rollformula" name="rollformula" value="{{flags.formula}}"/>
                <p class="notes">{{localize "VENDOR-RESTOCK.rollformula-notes"}}</p>
            </div>        
        </section>
    </div>
    <footer>
        <button id="vendor-restock-submit" type="submit">
            {{localize "VENDOR-RESTOCK.submit"}}
        </button>
    </footer>
</form>